<h2>
    <%= locals.discription %> / <%= locals.patient.nic %>
</h2>

<% locals.messages.info.forEach(message=> { %>
    <div class="alert alert-success" role="alert">
        <%= message %>
            <button type="button" class="closebtn" onclick="this.parentElement.style.display='none';"
                aria-label="Close">
                &times;
            </button>
    </div>
    <% }) %>

        <% locals.messages.error.forEach(message=> { %>
            <div class="alert erroralert-success" role="alert">
                <%= message %>
                    <button type="button" class="closebtn" onclick="this.parentElement.style.display='none';"
                        aria-label="Close">
                        &times;
                    </button>
            </div>
            <% }) %>

                <div class="form-container">
                    <form action="/update/<%= locals.patient._id %>" method="POST" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="input-group">
                                <label for="name">Name:</label>
                                <input type="text" id="name" name="name" value="<%= locals.patient.name%>" required>
                            </div>
                            <div class="input-group">
                                <label for="phoneNo">Phone No:</label>
                                <input type="tel" id="phoneNo" name="phoneNo" value="<%= locals.patient.phoneNo%>"
                                    required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="input-group">
                                <label for="email">Email:</label>
                                <input type="email" id="email" name="email" value="<%= locals.patient.email%>" required>
                            </div>
                            <div class="input-group-age">
                                <label for="age">Age:</label>
                                <input type="number" id="age" name="age" value="<%= locals.patient.age%>" required>
                            </div>
                        </div>
                        <div class="form-row">

                            <div class="input-group">
                                <label for="nic">Cnic:</label>
                                <input type="number" id="nic" name="nic" value="<%=locals.patient.nic %>" required>
                            </div>
                            <div class="input-group-file">
                                <label for="file">File:</label>
                                <input type="file" id="file" name="file" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png">
                            </div>
                        </div>
                        <div class="form-row full-width">
                            <div class="input-group">
                                <label for="Address">Address:</label>
                                <input type="text" id="Address" name="address" value="<%= locals.patient.address%>"
                                    required>
                            </div>
                            <div class="input-group">
                                <label for="gender">Gender</label>
                                <select id="gender" name="gender" value="<%= locals.patient.gender%>" required>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                </select>
                            </div>
                        </div>
                        <button type="submit">Update patients</button>
                    </form>
                </div>